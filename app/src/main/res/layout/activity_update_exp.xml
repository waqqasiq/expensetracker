<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddExpenses">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_marginTop="60dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="yyyy-MM-dd"
                android:textSize="20sp"
                android:inputType="date"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <EditText
                android:id="@+id/expname1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="title 1"
                android:textColorHint="@color/colorDarkorange"
                android:textStyle="bold"
                android:text="Depart"
                android:inputType="text"
                />
            <EditText
                android:id="@+id/depart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter expense amount"
                android:inputType="number"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/expname2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="title 2"
                android:text="Lunch"
                android:textColorHint="@color/colorDarkorange"
                android:textStyle="bold"
                android:inputType="text"
                />
            <EditText
                android:id="@+id/lunch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter expense amount"
                android:inputType="number"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/expname3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="title 3"
                android:text="Return"
                android:textColorHint="@color/colorDarkorange"
                android:textStyle="bold"
                android:inputType="text"
                />
            <EditText
                android:id="@+id/returnexp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter expense amount"
                android:inputType="number"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/expname4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="title 4"
                android:text="Other"
                android:textColorHint="@color/colorDarkorange"
                android:textStyle="bold"
                android:inputType="text"
                />
            <EditText
                android:id="@+id/other"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter expense amount"
                android:inputType="number"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">
            <Button
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UPDATE"
                android:onClick="btnUpdate"
                android:textColor="@color/colorSnow"
                android:background="@color/colorCadetblue"></Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">
            <Button
                android:id="@+id/btnViewExp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Expenses"
                android:textColor="@color/colorSnow"
                android:background="@color/colorNew"
                android:onClick="btnViewExp"></Button>
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>